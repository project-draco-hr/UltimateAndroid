{
  super.onDraw(canvas);
  if (check) {
    if (step < 11)     step++;
  }
 else {
    if (step >= 0)     step--;
    if (step == -1)     changeBackground();
  }
  Rect src=new Rect(40 * step,0,(40 * step) + 40,40);
  Rect dst=new Rect(0,0,this.getWidth() - 2,this.getHeight());
  canvas.drawBitmap(sprite,src,dst,null);
  invalidate();
}
