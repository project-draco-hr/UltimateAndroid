{
  int result;
  int specMode=MeasureSpec.getMode(measureSpecHeight);
  int specSize=MeasureSpec.getSize(measureSpecHeight);
  if (specMode == MeasureSpec.EXACTLY) {
    result=specSize;
  }
 else   if (specMode == MeasureSpec.AT_MOST) {
    result=specSize;
  }
 else {
    result=canvasSize;
  }
  return (result + 2);
}
