{
  if (attrs != null) {
    String v=attrs.getAttributeValue("http://schemas.android.com/apk/res/android","background");
    if (v != null) {
      if (v.startsWith("#")) {
        background=Color.parseColor(v);
      }
 else {
        background=getResources().getColor(Integer.parseInt(v.replaceAll("@","")));
      }
    }
  }
}
