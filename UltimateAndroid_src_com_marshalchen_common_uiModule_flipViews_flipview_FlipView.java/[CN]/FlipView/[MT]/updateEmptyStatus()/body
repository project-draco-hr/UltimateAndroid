{
  boolean empty=mAdapter == null || mPageCount == 0;
  if (empty) {
    if (mEmptyView != null) {
      mEmptyView.setVisibility(View.VISIBLE);
      setVisibility(View.GONE);
    }
 else {
      setVisibility(View.VISIBLE);
    }
  }
 else {
    if (mEmptyView != null) {
      mEmptyView.setVisibility(View.GONE);
    }
    setVisibility(View.VISIBLE);
  }
}
